import showProjects from ".";
import showProjectWhenCreatingProject from "./showProjectWhenCreatingProject";

let i = 0;


function addProjects() {
    let userProjectName = prompt("Enter a project name");
    let userProjectDescription = prompt("Enter a description");
    let projectList = document.querySelector(".projects-list");
    let projectName = document.createElement("span");
    let projectDescription = document.createElement("span");

    projectName.innerHTML = `
    <span class="${i}">${userProjectName}</span>
    `

    projectName.dataset.index = i;

    projectList.appendChild(projectName);
    showProjectWhenCreatingProject(projectName, userProjectDescription);
    
    showProjects(projectName, userProjectDescription);
    i++;
}



export default addProjects